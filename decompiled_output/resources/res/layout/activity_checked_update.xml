<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_loading_update_content" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/iv_load_failed" android:background="@drawable/icon_load_failed" android:visibility="gone" android:layout_width="80dp" android:layout_height="80dp"/>
            <TextView android:id="@+id/tv_retry_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-2dp" android:text="@string/failed_to_load_update_content"/>
            <Button android:textSize="12sp" android:id="@+id/btn_retry" android:background="@drawable/icon_button_blue_full_2" android:visibility="gone" android:layout_width="80dp" android:layout_height="33dp" android:layout_marginTop="8dp" android:text="@string/retry"/>
            <ImageView android:id="@+id/iv_loading_anim" android:background="@drawable/animation_list_loading_anim" android:layout_width="30dp" android:layout_height="30dp"/>
            <TextView android:gravity="center_horizontal" android:id="@+id/tv_loading_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/loading_update_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textSize="18sp" android:textColor="#ffffff" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/new_version_found_title"/>
                <TextView android:background="#1f1f1f" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="4dp"/>
            </LinearLayout>
            <LinearLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp">
                    <ImageView android:layout_width="17dp" android:layout_height="17dp" android:layout_marginLeft="5dp" android:layout_marginTop="6dp" android:src="@drawable/icon_arrow_back"/>
                    <TextView android:textSize="15sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/new_version_found"/>
                </LinearLayout>
                <TextClock android:textSize="15sp" android:textColor="@color/white" android:gravity="right" android:id="@+id/tc_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="10dp" android:layout_centerHorizontal="true" android:format12Hour="hh:mm" android:format24Hour="HH:mm"/>
            </LinearLayout>
            <ScrollView android:id="@+id/sv_layout_body" android:focusable="true" android:focusableInTouchMode="true" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_layout_body" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="52dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:paddingHorizontal="10dp">
                    <TextView android:textSize="15sp" android:textColor="#40aef8" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/new_version_found"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp">
                        <TextView android:textSize="14sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/new_version"/>
                        <TextView android:textSize="12sp" android:id="@+id/tv_new_app_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="New App Name"/>
                        <TextView android:textSize="12sp" android:id="@+id/tv_new_version" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="NewVersion"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp">
                        <TextView android:textSize="14sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/current_version"/>
                        <TextView android:textSize="12sp" android:id="@+id/tv_app_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/app_name_2"/>
                        <TextView android:textSize="12sp" android:id="@+id/tv_version" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/clientVersion"/>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/tv_app_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="12dp">
                        <LinearLayout android:orientation="vertical" android:id="@+id/tv_app_info_text" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_update_time"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_size"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp">
                            <TextView android:id="@+id/tv_app_update_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1970.01.01"/>
                            <TextView android:id="@+id/tv_app_apk_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0MB"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:id="@+id/ll_app_update_log" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_marginRight="20dp" android:layout_marginHorizontal="20dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_update_log"/>
                        <TextView android:textSize="12sp" android:id="@+id/tv_app_update_log" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="AppUpdateLog"/>
                    </LinearLayout>
                    <Button android:textSize="15sp" android:textColor="#ffffff" android:id="@+id/btn_update" android:background="@drawable/icon_button_blue_full_long" android:visibility="visible" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_marginRight="20dp" android:text="@string/update_now" android:layout_marginHorizontal="20dp"/>
                    <TextView android:id="@+id/tv_progress_bar_max_width" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginHorizontal="20dp"/>
                    <FrameLayout android:id="@+id/fl_downloading_progress" android:visibility="gone" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginHorizontal="20dp">
                        <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/icon_button_download_background" android:scaleType="fitXY"/>
                        <TextView android:id="@+id/tv_download_progress_bar" android:background="#40aef8" android:layout_width="0dp" android:layout_height="match_parent"/>
                        <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/icon_four_corner_black" android:scaleType="fitXY"/>
                        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="22dp" android:layout_height="22dp" android:layout_marginLeft="15dp" android:src="@drawable/icon_download_white"/>
                            <TextView android:textSize="12sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/downloading"/>
                            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="15dp">
                                <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tv_donloading_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0%"/>
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                    <FrameLayout android:id="@+id/fl_installing" android:visibility="gone" android:layout_width="match_parent" android:layout_height="35dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginHorizontal="20dp">
                        <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/icon_button_download_background" android:scaleType="fitXY"/>
                        <TextView android:background="#40aef8" android:layout_width="match_parent" android:layout_height="match_parent"/>
                        <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/icon_four_corner_black" android:scaleType="fitXY"/>
                        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="22dp" android:layout_height="22dp" android:layout_marginLeft="15dp" android:src="@drawable/icon_installing_white"/>
                            <TextView android:textSize="12sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/installing"/>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
