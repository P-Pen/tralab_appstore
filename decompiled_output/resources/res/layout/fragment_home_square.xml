<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="4dp" android:text="@string/Home"/>
            <TextClock android:textSize="15sp" android:textColor="@color/white" android:gravity="right" android:id="@+id/tc_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="10dp" android:layout_centerHorizontal="true" android:format12Hour="hh:mm" android:format24Hour="HH:mm"/>
        </LinearLayout>
        <TextView android:background="#1f1f1f" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="4dp"/>
        <TextView android:id="@+id/tv_banner_max_width" android:layout_width="158dp" android:layout_height="0dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginHorizontal="10dp"/>
        <ScrollView android:id="@+id/sv_layout_body" android:focusable="true" android:focusableInTouchMode="true" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_home_body" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_search_box" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <LinearLayout android:gravity="center" android:background="@drawable/icon_search_box_gray" android:layout_width="158dp" android:layout_height="35dp" android:foreground="?android:attr/selectableItemBackground">
                        <ImageView android:layout_width="17dp" android:layout_height="17dp" android:src="@drawable/icon_search_gray"/>
                        <TextView android:textSize="15sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="@string/search"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_banner" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <com.youth.banner.Banner android:id="@+id/bn_banner" android:layout_width="158dp" android:layout_height="89dp"/>
                        <FrameLayout android:layout_gravity="bottom|center_horizontal" android:id="@+id/fl_banner_indicator_background" android:background="#66999999" android:layout_width="50dp" android:layout_height="2dp" android:layout_marginBottom="5dp">
                            <TextView android:id="@+id/tv_banner_indicator_selected" android:background="#ffffff" android:layout_width="50dp" android:layout_height="match_parent"/>
                        </FrameLayout>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                    <LinearLayout android:layout_gravity="center_horizontal" android:id="@+id/ll_jump_to_new_arrival" android:layout_width="158dp" android:layout_height="wrap_content">
                        <ImageView android:layout_width="4dp" android:layout_height="16dp" android:src="@drawable/icon_indication"/>
                        <TextView android:textSize="15sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="-2dp" android:text="@string/new_arrival"/>
                        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="6dp" android:layout_height="12dp" android:src="@drawable/icon_next_page"/>
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout android:orientation="vertical" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_new_arrival" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                    <LinearLayout android:layout_gravity="center_horizontal" android:id="@+id/ll_jump_to_recommendation" android:layout_width="158dp" android:layout_height="wrap_content">
                        <ImageView android:layout_width="4dp" android:layout_height="16dp" android:src="@drawable/icon_indication"/>
                        <TextView android:textSize="15sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="-2dp" android:text="@string/recommendation"/>
                        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="6dp" android:layout_height="12dp" android:src="@drawable/icon_next_page"/>
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout android:orientation="vertical" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_recommendation" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                    <LinearLayout android:layout_gravity="center_horizontal" android:id="@+id/ll_jump_to_download_ranking" android:layout_width="158dp" android:layout_height="wrap_content">
                        <ImageView android:layout_width="4dp" android:layout_height="16dp" android:src="@drawable/icon_indication"/>
                        <TextView android:textSize="15sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="-2dp" android:text="@string/download_ranking"/>
                        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:layout_width="6dp" android:layout_height="12dp" android:src="@drawable/icon_next_page"/>
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout android:orientation="vertical" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
                        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_download_ranking" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:gravity="center_horizontal" android:id="@+id/ll_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="25dp">
                    <TextView android:textSize="12sp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_more_apps"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_loading_app_list" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/iv_load_failed" android:background="@drawable/icon_load_failed" android:visibility="gone" android:layout_width="80dp" android:layout_height="80dp"/>
        <TextView android:gravity="center_horizontal" android:id="@+id/tv_retry_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-2dp" android:text="@string/failed_to_load_apps_list"/>
        <Button android:textSize="12sp" android:id="@+id/btn_retry" android:background="@drawable/icon_button_blue_full_2" android:visibility="gone" android:layout_width="80dp" android:layout_height="33dp" android:layout_marginTop="8dp" android:text="@string/retry"/>
        <ImageView android:id="@+id/iv_loading_anim" android:background="@drawable/animation_list_loading_anim" android:layout_width="30dp" android:layout_height="30dp"/>
        <TextView android:gravity="center_horizontal" android:id="@+id/tv_loading_app_list" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/loading_apps_list"/>
    </LinearLayout>
</FrameLayout>
