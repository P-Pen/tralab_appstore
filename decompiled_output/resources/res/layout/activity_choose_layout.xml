<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="16sp" android:textColor="#ffffff" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/layout_selection"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
        <ImageView android:id="@+id/iv_square_layout" android:layout_width="85dp" android:layout_height="106dp" android:src="@drawable/icon_square_layout"/>
        <ImageView android:id="@+id/iv_circle_layout" android:layout_width="85dp" android:layout_height="106dp" android:src="@drawable/icon_circle_layout"/>
    </LinearLayout>
    <Button android:textSize="14sp" android:id="@+id/btn_choose" android:background="@drawable/icon_button_blue_full" android:layout_width="84dp" android:layout_height="30dp" android:layout_marginTop="4dp" android:text="@string/ok"/>
</LinearLayout>
